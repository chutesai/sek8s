# System Inspector Environment Configuration
# Managed by Ansible

# Server configuration
UDS_PATH=/run/system-inspector/system-inspector.sock
BIND_ADDRESS='127.0.0.1'
PORT=0

# Limits and security knobs
MAX_OUTPUT_BYTES={{ system_inspector_max_output_bytes | default(16384) }}
COMMAND_TIMEOUT_SECONDS={{ system_inspector_command_timeout | default(10.0) }}
LOG_TAIL_DEFAULT={{ system_inspector_log_tail_default | default(200) }}
LOG_TAIL_MAX={{ system_inspector_log_tail_max | default(1000) }}
LOG_WINDOW_MAX_MINUTES={{ system_inspector_log_window_max | default(1440) }}

# TLS paths (unused when binding to UDS)
TLS_CERT_PATH=
TLS_KEY_PATH=
CLIENT_CA_PATH=
MTLS_REQUIRED=false
DEBUG={{ system_inspector_debug | default(false) | lower }}
