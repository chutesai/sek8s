[Unit]
Description=Bind mount containerd image blobs onto cache volume
Documentation=man:systemd.mount(5)
Requires=var-snap.mount
After=var-snap.mount
Before=k3s.service
Before=k3s-agent.service

[Mount]
What=/var/snap/containerd-blobs
Where=/var/lib/rancher/k3s/agent/containerd/io.containerd.content.v1.content/blobs
Type=none
Options=rbind
DirectoryMode=0755

[Install]
WantedBy=local-fs.target
